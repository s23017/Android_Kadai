<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="ジョジョスタンド"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/tvStandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="スタンド名: "
        android:textSize="24sp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvStandUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本体: "
        android:textSize="24sp"
        android:layout_below="@id/tvStandName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- 4つの選択肢ボタン -->
    <Button
        android:id="@+id/btnChoice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選択肢1"
        android:layout_below="@id/tvStandUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnChoice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選択肢2"
        android:layout_below="@id/btnChoice1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnChoice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選択肢3"
        android:layout_below="@id/btnChoice2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnChoice4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選択肢4"
        android:layout_below="@id/btnChoice3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="リロード"
        android:layout_below="@id/btnChoice4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
